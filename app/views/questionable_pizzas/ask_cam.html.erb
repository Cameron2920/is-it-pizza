<% if @can_ask_cam %>
    <h1>Is it Pizza? Ask Cam</h1>
    <%= form_for @is_it_pizza, url: questionable_pizzas_create_path, html: { multipart: true } do |form| %>
        <%= form.file_field :pizza_image, as: :file %>
        <%= form.file_field :pizza_video, as: :file %>
        <%= form.submit 'Ask Cam' %>
        <p id="error"><%= flash[:error] %></p>
    <% end %>
<% else %>
    <h1>Woah slow down!!!! You gotta give cam some time to decide if your last one was pizza.</h1>
<% end %>